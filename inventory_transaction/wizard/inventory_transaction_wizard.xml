<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="inventory_transaction_wizard" model="ir.ui.view">
		<field name="name">inventory.transaction.wizard</field>
		<field name="model">inventory.transaction.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group name="filters">
					<group name="main_filters">
						<field name="start_date"/>
						<field name="end_date"/>
					</group>
                    <field name="product_category_ids"/>
				</group>
                <notebook>
                    <page string="Report" name="report">
                        <group>
                            <group name="option">
                                <field name="options"/>
                            </group>
                            <group name="by">
                                <field name="group_by"/>
                                <field name="product_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible' : ['|',('group_by','=','customer'),('group_by','=','sales_rep')]}"/>
                                <field name="sales_rep_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible' : ['|',('group_by','=','customer'),('group_by','=','product')]}"/>
                                <field name="partner_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible' : ['|',('group_by','=','sales_rep'),('group_by','=','product')]}"/>
                            </group>   
                        </group>
                    </page>
                    <page string="Transaction" name="transaction">
                        <group name="transactions">
                            <field name="transaction_type_ids" widget="many2many_checkboxes"/>
                            <!--<field name="in_invoice"/>
                            <field name="in_refund"/>
                            <field name="out_invoice"/>
                            <field name="out_refund"/>-->
                        </group>
                    </page>
                </notebook>
				<footer>
                    <div>
                        <button name="button_export_pdf" string="Export PDF" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button name="button_export_xlsx" string="Export XLSX" type="object"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </div>

				</footer>
			</form>
		</field>
		
	</record>
	
	<act_window id="action_inventory_transaction_wizard"
		name="Inventory Transaction"
		res_model="inventory.transaction.wizard"
		view_type="form"
		view_mode="form"
		view_id="inventory_transaction_wizard" 
		target="new"
		/>
		
	    <menuitem
	        parent="stock.menu_warehouse_report"
	        action="action_inventory_transaction_wizard"
	        id="menu_open_items_wizard"
	        sequence="30"
	        />
</odoo>
