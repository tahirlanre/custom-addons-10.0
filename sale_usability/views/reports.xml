<odoo>
	<record id="paperformat_dulux_custom_invoice_paper"
	        model="report.paperformat"> 
	  <field name="name">Dulux Custom Invoice Paper</field>
	  <field name="format">A4</field> 
	  <field name="page_height">0</field> 
	  <field name="page_width">0</field> 
	  <field name="orientation">Portrait</field> 
	  <field name="margin_top">40</field> 
	  <field name="margin_bottom">80</field> 
	  <field name="margin_left">7</field> 
	  <field name="margin_right">1</field> 
	  <field name="header_line" eval="False" /> 
	  <field name="header_spacing">35</field>
	  <field name="dpi">90</field> 
	</record>
	
<report
    id="account_invoice"
    model="account.invoice"
    string="DCC Invoice"
    report_type="qweb-pdf"
    name="sale_usability.report_invoice_dcc"
    file="sale_usability.report_invoice_dcc"
	paperformat="paperformat_dulux_custom_invoice_paper"
/>
</odoo>