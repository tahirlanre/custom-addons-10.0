<odoo>
	<data>
   		<template id="report_invoice_custom_document" inherit_id="account.report_invoice_document" primary="True">
           
		    <xpath expr="//div[@class='col-xs-4 pull-right']" position="replace">
		            <div style="padding-top: 250px;">
		                <div class="col-xs-4 pull-right">
		                    <table class="table table-condensed">
		                        <tr class="border-black">
		                            <td><strong>Total Net Amount</strong></td>
		                            <td class="text-right">
		                                <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
		                            </td>
		                        </tr>
		                        <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
		                            <tr>
		                                <td>Total VAT Amount</td>
		                                <td class="text-right">
		                                    <span t-esc="amount_by_group[1]"/>
		                                </td>
		                            </tr>
		                        </t>
		                        <tr class="border-black">
		                            <td><strong>Total</strong></td>
		                            <td class="text-right">
		                                 <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
		                            </td>
		                        </tr>
		                    </table>
		                </div>
		            </div>
		    </xpath>
		</template>
        
		<template id="report_invoice_custom">
           <!--<t t-call="report.html_container">-->
                <t t-foreach="docs" t-as="o">
                    <t t-call="houseaffairs_custom_invoice.report_invoice_custom_document" t-lang="o.partner_id.lang"/>
                </t>
				<!--</t>-->
        </template>
    </data>
</odoo>