										<td t-att-style="style">
											<span style="color: white;" t-esc="'..' * 10"/>
											<span>Net Profit/(Loss)</span>
										</td>
										<td class="text-right" t-att-style="style">
										</td>
										<td class="text-right" t-att-style="style">
											<t t-set="net_profit_loss" t-value="gross_profit_loss - overheads_balance"/>
											<t t-if="net_profit_loss &gt; 0"><t t-esc="'{:,.2f}'.format(net_profit_loss)"/></t>
											<t t-if="net_profit_loss &lt; 0">(<t t-esc="'{:,.2f}'.format(abs(net_profit_loss))"/>)</t>
										</td>
									</tr>
								</t>
								<t t-if="a.get('name') == 'Current Liabilities'">
									<tr>
										<td t-att-style="style">
											<span style="color: white;" t-esc="'..' * 10"/>
											<span>Current Assets less Current Liabilities</span>
										</td>
										<td class="text-right" t-att-style="style">
										</td>
										<td class="text-right" t-att-style="style">
											<t t-set="current_assets_less_liabilities" t-value="current_assets_balance - current_liabilities_balance"/>
											<t t-if="current_assets_less_liabilities &gt; 0"><t t-esc="'{:,.2f}'.format(current_assets_less_liabilities)"/></t>
											<t t-if="current_assets_less_liabilities &lt; 0">(<t t-esc="'{:,.2f}'.format(abs(current_assets_less_liabilities))"/>)</t>
										</td>
									</tr>
									<tr>
										<td t-att-style="style">
											<span style="color: white;" t-esc="'..' * 10"/>
											<span>Total Assets less Current Liabilities</span>
										</td>
										<td class="text-right" t-att-style="style">
										</td>
										<td class="text-right" t-att-style="style">
											<t t-set="total_assets_less_current_liabilities" t-value="(current_assets_balance+fixed_assets_balance) - current_liabilities_balance"/>
