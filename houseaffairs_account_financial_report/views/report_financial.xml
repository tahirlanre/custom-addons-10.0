											<t t-if="gross_profit_loss &gt; 0"><t t-esc="'{:,.2f}'.format(gross_profit_loss)"/></t>
											<t t-if="gross_profit_loss &lt; 0">(<t t-esc="'{:,.2f}'.format(abs(gross_profit_loss))"/>)</t>
										</td>
									</tr>
								</t>
								<t t-if="a.get('name') == 'Overheads'">
