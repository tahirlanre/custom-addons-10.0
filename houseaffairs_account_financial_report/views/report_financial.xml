<odoo>
	<template id="report_financial_custom" inherit_id="account.report_financial">
		<xpath expr="//div[@class='page']" position="replace">
            <div class="page">
                <h2 t-esc="data['account_report_id'][1]"/>

                <div class="row mt32 mb32">
                    <div class="col-xs-4">
                        <strong>Target Moves:</strong>
                        <p>
                            <span t-if="data['target_move'] == 'all'">All Entries</span>
                            <span t-if="data['target_move'] == 'posted'">All Posted Entries</span>
                        </p>
                    </div>
                    <div class="col-xs-4">
                        <p>
                            <t t-if="data['date_from']"><strong>Date from :</strong> <span t-esc="data['date_from']"/><br/></t>
                            <t t-if="data['date_to']"><strong>Date to :</strong> <span t-esc="data['date_to']"/></t>
                        </p>
                    </div>
                </div>
				
                <table class="table table-condensed" t-if="not data['enable_filter'] and not data['debit_credit']">
                    <thead>
                        <tr>
                            <th></th>
                            <th class="text-right" style="text-decoration:underline;">Period</th>
							<th></th>
                            <th class="text-right" style="text-decoration:underline;">Year to Date</th>
							<th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="get_account_lines" t-as="a">
                            <t t-if="a['level'] != 0">
                               <!-- <t t-if="a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: normal;'"/></t>
                                <t t-if="not a.get('level') &gt; 3"><t t-set="style" t-value="'font-weight: bold;'"/></t>-->
							    <t t-set="style" t-value="'font-weight: bold;'"/>
								<t t-if="a.get('name') == 'Sales'"><t t-set="sales_balance" t-value="a.get('balance')"/></t>
								<t t-if="a.get('name') == 'Cost of Sales'"><t t-set="c_o_sales_balance" t-value="a.get('balance')"/></t>
								<t t-if="a.get('name') == 'Direct Expenses'"><t t-set="d_expenses_balance" t-value="a.get('balance')"/></t>
								<t t-if="a.get('name') == 'Overheads'"><t t-set="overheads_balance" t-value="a.get('balance')"/></t>
								<t t-if="a.get('name') == 'Fixed Assets'"><t t-set="fixed_assets_balance" t-value="a.get('balance')"/></t>
								<t t-if="a.get('name') == 'Current Assets'"><t t-set="current_assets_balance" t-value="a.get('balance')"/></t>
								<t t-if="a.get('name') == 'Current Liabilities'"><t t-set="current_liabilities_balance" t-value="a.get('balance')"/></t>
								<t t-if="a.get('name') == 'Long Term Liabilities'"><t t-set="long_term_liabilities_balance" t-value="a.get('balance')"/></t>
								<t t-if="'Capital' or  'Reserves' in a.get('name')"><t t-set="capital_balance" t-value="a.get('balance')"/></t>
                                <td>
                                    <span style="color: white;" t-esc="'..' * a.get('level', 0)"/>
                                    <span t-att-style="style" t-esc="a.get('name')"/>
                                </td>
								<t t-foreach="a.get('sub_lines')" t-as="sub_a">
									<t t-set="sub_style" t-value="'font-weight: normal;'"/>
									<tr>
										<td>
											<span style="color: white;" t-esc="'..' * sub_a.get('level', 0)"/>
											<span t-att-style="sub_style" t-esc="sub_a.get('name')"/>
										</td>
									
										<!-- check if balance is +ve or -ve. if -ve, replace - sign with paranthesis-->
										<t t-if="sub_a.get('balance') &gt; 0 or sub_a.get('balance') == 0">
											<td class="text-right">
												<span t-att-style="sub_style" t-esc="'{:,.2f}'.format(abs(sub_a.get('balance')))"/>
											</td>
										</t>
								
										<t t-if="sub_a.get('balance') &lt; 0">
											<td class="text-right">
												(<span t-att-style="sub_style" t-esc="'{:,.2f}'.format(abs(sub_a.get('balance')))"/>)
											</td>
										</t>
									</tr>
								</t>
								<!--if report_type, balance should move to new row and align to cells for report balance-->
								<t t-if="not a.get('level') &gt; 1">
									<tr></tr>
									<td></td>
								</t>
								<td></td>
								<!-- check if balance is +ve or -ve. if -ve, replace - sign with paranthesis-->
								<t t-if="a.get('balance') &gt; 0 or a.get('balance') == 0">
									<td class="text-right">
										<span t-att-style="style" t-esc="'{:,.2f}'.format(abs(a.get('balance')))"/>
									</td>
								</t>
							
